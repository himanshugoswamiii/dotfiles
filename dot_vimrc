set number
set relativenumber
set tabstop=4
set shiftwidth=4
set expandtab

"set autoindent
set smartindent
syntax on

inoremap kj <Esc>

" -- Cursor change in different modes
let &t_SI = "\e[6 q"
let &t_EI = "\e[2 q"
" set ttimeout  " These lines avoids the delay
" set ttimeoutlen=1
" set ttyfast
"
if (has("termguicolors"))
    set termguicolors
endif

colorscheme slate
